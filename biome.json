{
    "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true,
        "defaultBranch": "main"
    },
    "formatter": {
        "useEditorconfig": true,
        "lineWidth": 120
    },
    "linter": {
        "enabled": true,
        "rules": {
            "correctness": {
                "useImportExtensions": "error"
            },
            "suspicious": {
                "useAwait": "error"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "jsxQuoteStyle": "double",
            "semicolons": "asNeeded",
            "arrowParentheses": "asNeeded",
            "trailingCommas": "all"
        }
    }
}
