{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        // General (browser-specific)
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],

        // Modules
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "types": ["vite/client"]
    },
    "include": ["src/**/*"]
}
