{
    "name": "solid-firebase-starter",
    "version": "0.0.1",
    "scripts": {
        "dev": "vite",

        "codeq:tsc": "tsc -b && rm *.tsbuildinfo",
        "codeq:format": "biome format --write",
        "codeq:lint": "biome lint --fix",
        "codeq": "pnpm codeq:tsc && pnpm codeq:format && pnpm codeq:lint",

        "test:e2e": "bddgen && firebase emulators:exec 'playwright test'",
        "test:e2e:ui": "bddgen && firebase emulators:exec 'playwright test --ui'",
    },
    "dependencies": {
        "firebase": "12.3.0",
        "solid-js": "1.9.9",
    },
    "devDependencies": {
        // Code quality
        "@biomejs/biome": "2.2.5",

        // Bundle
        "vite": "7.1.8",
        "vite-plugin-solid": "2.11.9",
        "vite-tsconfig-paths": "5.1.4",
        "sass": "1.93.2",
        "typescript": "5.9.3",

        // E2E Tests
        "@cucumber/cucumber": "12.2.0",
        "@playwright/test": "1.55.1",
        "playwright-bdd": "8.4.1",
    },
}
