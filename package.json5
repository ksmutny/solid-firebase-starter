{
    "name": "solid-firebase-starter",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "scripts": {
        // Web app
        "dev": "vite --host",
        "build": "vite build",

        // Test
        "test": "vitest",

        // Code quality
        "codeq:tsc": "tsc -b && rm *.tsbuildinfo",
        "codeq:format": "biome format --write",
        "codeq:lint": "biome lint --fix",
        "codeq:imports": "biome check --formatter-enabled=false --linter-enabled=false --write",
        "codeq": "pnpm codeq:tsc && pnpm codeq:format && pnpm codeq:lint && pnpm codeq:imports"
    },
    "dependencies": {
        "solid-js": "1.9.10"
    },
    "devDependencies": {
        // Bundle
        "sass": "1.97.1",
        "typescript": "5.9.3",
        "vite": "7.3.0",
        "vite-plugin-solid": "2.11.10",
        "vite-tsconfig-paths": "6.0.3",

        // Test
        "vitest": "4.0.16",

        // Code quality
        "@biomejs/biome": "2.3.10"
    }
}
