{
    "name": "solid-firebase-starter",
    "private": true,
    "scripts": {
        // Webapp
        "dev": "pnpm -C webapp dev",
        "build": "pnpm -C webapp build",

        // Unit tests
        "test:unit": "pnpm -C webapp test",
        "test:unit:ui": "pnpm -C webapp test:ui",

        // E2E tests
        "test:e2e": "pnpm -C specs test:e2e",
        "test:e2e:ui": "pnpm -C specs test:e2e:ui",

        // Code quality
        "codeq:tsc": "tsc -b",
        "codeq:format": "biome format --write",
        "codeq:lint": "biome lint --fix",
        "codeq:imports": "biome check --formatter-enabled=false --linter-enabled=false --write",
        "codeq": "pnpm codeq:tsc && pnpm codeq:format && pnpm codeq:lint && pnpm codeq:imports"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.10",
        "@playwright/test": "1.57.0",
        "typescript": "5.9.3",
    }
}
